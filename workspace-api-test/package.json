{
	"name": "workspace-api-test",
	"displayName": "workspace-api-test",
	"description": "Tests the workspace trust API",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"enabledApiProposals": [
		"workspaceTrust"
	],
	"activationEvents": [
		"onCommand:workspace-api-test.log-current-trust",
		"onCommand:workspace-api-test.request-trust"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "workspace-api-test.log-current-trust",
				"title": "Log current trust",
				"category": "Workspace Trrust"
			},
			{
				"command": "workspace-api-test.request-trust",
				"title": "Request trust for this workspace",
				"category": "Workspace Trust"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.63.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"typescript": "^4.5.4",
		"@vscode/test-electron": "^2.0.3"
	}
}
