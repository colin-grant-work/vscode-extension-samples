{
	"name": "custom-view-samples",
	"displayName": "Custom view Samples",
	"description": "Samples for VSCode's view API",
	"version": "0.0.1",
	"publisher": "vscode-samples-cjg",
	"enabledApiProposals": [
		"treeViewDragAndDrop"
	],
	"private": true,
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"engines": {
		"vscode": "^1.57.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:testView",
		"onCommand:testView.reveal"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "testView",
					"name": "Test View"
				}
			]
		},
		"commands": [
			{
				"command": "parent-item-click",
				"title": "Show a message about clicking on a parent item.",
				"icon": "$(type-hierarchy-sub)"
			},
			{
				"command": "child-item-click",
				"title": "Show a message about clicking on an item with a B in it.",
				"icon": "$(type-hierarchy-super)"
			},
			{
				"command": "testView.reveal",
				"title": "Test View: Reveal"
			},
			{
				"command": "testView.changeTitle",
				"title": "Test View: Change Title"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "parent-item-click",
					"when": "view == testView && viewItem == parent",
					"group": "inline@1"
				},
				{
					"command": "child-item-click",
					"when": "view == testView && viewItem == child",
					"group": "inline@2"
				},
				{
					"command": "parent-item-click",
					"when": "view == testView && viewItem == parent",
					"group": "not-inline@1"
				},
				{
					"command": "child-item-click",
					"when": "view == testView && viewItem == child",
					"group": "not-inline@2"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/mkdirp": "^0.5.2",
		"@types/node": "^12.12.0",
		"@types/rimraf": "^2.0.2",
		"@types/vscode": "^1.52.0",
		"@typescript-eslint/eslint-plugin": "^5.19.0",
		"@typescript-eslint/parser": "^5.19.0",
		"eslint": "^8.13.0",
		"typescript": "^4.6.3"
	},
	"dependencies": {
		"ftp": "^0.3.10",
		"jsonc-parser": "^0.4.2",
		"minimist": "^1.2.6",
		"mkdirp": "^0.5.1",
		"rimraf": "^2.6.2"
	}
}
